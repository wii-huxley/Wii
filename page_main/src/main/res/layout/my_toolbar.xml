<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/toolbar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:minHeight="?actionBarSize">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/dp_64_p"
        android:paddingRight="@dimen/dp_64_p"
        android:textColor="@color/white"
        android:background="@color/color_amber_500"
        android:textSize="19sp"
        tools:text="标题"/>
    <ImageView
        android:id="@+id/iv_press_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:paddingLeft="@dimen/dp_16_p"
        android:paddingRight="@dimen/dp_16_p"
        android:src="@mipmap/ic_arrow_back_white_24dp"
        android:tint="@color/white"
        android:tintMode="src_in"/>


    <TextView
        android:id="@+id/tv_management"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_16_p"
        android:paddingRight="@dimen/dp_16_p"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="设置"/>
</FrameLayout>
